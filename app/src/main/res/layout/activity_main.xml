<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Sustainability Banner -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get smart control, stay sustainableâ€”give your old smartphones a role that's capable!"
            android:textSize="18sp"
            android:textColor="#1B5E20"
            android:textStyle="italic"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/card_background"
            android:layout_marginBottom="24dp"/>

        <!-- RI Status Indicator -->
        <ToggleButton
            android:id="@+id/btn_ri"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="RI: ACTIVE (Required for outputs)"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="12dp"
            android:background="@drawable/relay_button_background"
            android:layout_marginBottom="16dp"/>

        <!-- Relay Controls Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Relay Controls"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"/>

        <!-- TXD Button -->
        <ToggleButton
            android:id="@+id/btn_txd"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:textOff="TXD OFF"
            android:textOn="TXD ON"
            android:textColor="#FFFFFF"
            android:background="@drawable/relay_button_background"
            android:textSize="14sp"/>

        <!-- RXD Button -->
        <ToggleButton
            android:id="@+id/btn_rxd"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:textOff="RXD OFF"
            android:textOn="RXD ON"
            android:textColor="#FFFFFF"
            android:background="@drawable/relay_button_background"
            android:textSize="14sp"/>

        <!-- RTS Button -->
        <ToggleButton
            android:id="@+id/btn_rts"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:textOff="RTS OFF"
            android:textOn="RTS ON"
            android:textColor="#FFFFFF"
            android:background="@drawable/relay_button_background"
            android:textSize="14sp"/>

        <!-- DTR Button -->
        <ToggleButton
            android:id="@+id/btn_dtr"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:textOff="DTR OFF"
            android:textOn="DTR ON"
            android:textColor="#FFFFFF"
            android:background="@drawable/relay_button_background"
            android:textSize="14sp"/>

        <!-- Sensor Status Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sensor Status"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"/>

        <!-- Sensor 1 -->
        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sensor 1:"
                android:textSize="14sp"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/tv_sensor1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FF0000"/>
        </LinearLayout>

        <!-- Sensor 2 -->
        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sensor 2:"
                android:textSize="14sp"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/tv_sensor2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FF0000"/>
        </LinearLayout>

        <!-- Sensor 3 -->
        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sensor 3:"
                android:textSize="14sp"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/tv_sensor3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FF0000"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>